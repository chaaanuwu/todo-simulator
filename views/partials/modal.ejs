<div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="taskForm" method="POST" action="<%= modalAction %>">
        <div class="modal-header">
          <h5 class="modal-title" id="taskModalLabel"><%= modalTitle %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="taskId" name="id">
          <div class="mb-3">
            <label for="taskInput" class="form-label">Task</label>
            <input type="text" class="form-control" id="taskInput" name="task" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
